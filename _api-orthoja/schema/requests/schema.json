{
    "$id": "http://orthoja.com/requests/schema.json",
    "$async": true,
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "CORE": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string"
                },
                "form": {
                    "type": "string",
                    "pattern": "REQUEST"
                },
                "payload": {
                    "type": ["object", "array"]
                }
            }
        },
        "credentials": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "session": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "apiKey"
            ]
        },
        "REQUEST/Batch": {
            "type": "object",
            "properties": {
                "timing": {
                    "type": "string",
                    "enum": [
                        "sync",
                        "async"
                    ]
                },
                "requests": {
                    "type": "array",
                    "items": {
                        "type": "object"
                    }
                }
            }
        },
        "REQUEST/Doctor_Login": {
            "$ref": "doctors.json#/definitions/login"
        },
        "REQUEST/Doctor_Create": {
            "$ref": "doctors.json#/definitions/create"
        },
        "REQUEST/Doctor_Delete": {
            "$ref": "doctors.json#/definitions/delete"
        },
        "REQUEST/Patient_Login": {
            "$ref": "patients.json#/definitions/create"
        },
        "REQUEST/Patient_Create": {
            "$ref": "patients.json#/definitions/create"
        },
        "REQUEST/Patient_Delete": {
            "$ref": "patients.json#/definitions/delete"
        }
    },
    "oneOf": [
        {
            "required": [
                "CORE"
            ]
        },
        {
            "required": [
                "REQUEST/Batch"
            ]
        },
        {
            "required": [
                "REQUEST/Doctor_Login"
            ]
        },
        {
            "required": [
                "REQUEST/Doctor_Create"
            ]
        },
        {
            "required": [
                "REQUEST/Doctor_Delete"
            ]
        },
        {
            "required": [
                "REQUEST/Patient_Login"
            ]
        },
        {
            "required": [
                "credentials",
                "REQUEST/Patient_Create"
            ]
        },
        {
            "required": [
                "credentials",
                "REQUEST/Patient_Delete"
            ]
        }
    ]
}